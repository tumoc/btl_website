@model DataAccess.EntityFramework.category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}



<!-- Begin Page Content -->
<div class="container-fluid admin-artcles create-item">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Thể loại</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div style="width: 70%;" class="form-group">
                @Html.LabelFor(model => model.cate_name, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cate_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cate_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default btn-create" />
                </div>
            </div>
        </div>
    }


    <div style="margin-top: 30px;">
        @Html.ActionLink("Back to list Categories", "Index")
    </div>
</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->
