            @Html.DropDownListFor(model => model.group_id, new SelectList(ViewBag.listUserGroup, "id", "Name"), new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.group_id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo" class=" btn btn-default btn-create" />
        </div>
    </div>
</div>
}

