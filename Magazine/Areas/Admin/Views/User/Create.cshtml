            @Html.EditorFor(model => model.sefl_des, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sefl_des, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.group_id, htmlAttributes: new { @class = "control-label col-md-2" })
